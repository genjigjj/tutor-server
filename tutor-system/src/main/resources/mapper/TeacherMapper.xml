        <!--所在省份-->
        <association property="province" column="province_id" javaType="com.wrc.tutor.common.entity.po.Area" select="selectProvinceForTeacher" autoMapping="true" >

        </association>

        <!--所在城市-->
        <association property="city" column="city_id" javaType="com.wrc.tutor.common.entity.po.Area" select="selectCityForTeacher" autoMapping="true" >

        </association>

    </resultMap>

    <!--分页加条件查询DTO-->
    <select id="selectPageDTO" resultMap="ResultMapDTO">
        SELECT *
        FROM `teacher`
        ${ew.customSqlSegment}
    </select>


    <!--根据id查询DTO-->
    <select id="selectDTOById" resultMap="ResultMapDTO">
        SELECT *
        FROM `teacher`
        WHERE id = #{id}
    </select>

    <!--DTO关联查询省份-->
    <select id="selectProvinceForTeacher" resultType="com.wrc.tutor.common.entity.po.Area">
        Select *
        FROM `area`
        WHERE id=#{province_id}
    </select>

    <!--DTO关联查询城市-->
    <select id="selectCityForTeacher" resultType="com.wrc.tutor.common.entity.po.Area">
        Select *
        FROM `area`
        WHERE id=#{city_id}
    </select>

